            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./api_response_402_error_schema.json"
                }
              }
            }
          },
          "403": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./api_response_403_error_schema.json"
