{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "post_depth_refinement.schema.json",
  "title": "post_depth_refinement",
  "description": "Initiates an asynchronous job to run multiple predict requests for an image",
  "type": "object",
  "required": ["inputs", "options"],
  "properties": {
    "inputs": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "$ref": "inputs.sensei.schema.json#/definitions/inputs"
      }
    },
    "options": {
      "type": "object",
      "minProperties": 1,
      "required": ["focalRange", "version"],
      "properties": {
        "focalRange": {
          "type":"object",
          "minProperties":1,
          "description": "The range of depth values that are in focus.",
          "required":[
            "nearFocus",
            "farFocus"
          ],
          "properties":{
            "nearFocus": {
              "type":"number",
              "minimum": 0,
              "maximum": 1,
              "description": "Near focus focal range"
            },
            "farFocus": {
              "type":"number",
              "minimum": 0,
              "maximum": 1,
              "description": "Far focus focal range"
            }
          }
        },
        "version": {
          "type": "string",
          "description": "The version of Camera RAW to use while generating the mask."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}