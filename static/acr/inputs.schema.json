{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "inputs.schema.json",
  "title": "a file input obect",
  "description": "An input object",
  "definitions": {
    "href": {
      "type": "string",
      "minLength": 1
    },
    "storage": {
      "type": "string",
      "enum": [
        "external",
        "lightroom",
        "dropbox",
        "azure",
        "adobe",
      ],
      "default": "external"
    },
    "inputs": {
      "type": "object",
      "minProperties": 1,
      "description": "An input file to add or edit",
      "required": [
        "href",
        "storage"
      ],
      "properties": {
        "storage": {
          "$ref": "#/definitions/storage"
        },
        "href": {
          "$ref": "#/definitions/href"
        }
      },
      "if": {
        "properties": {
          "storage": {
            "pattern": "(^azure|external|dropbox$)",
            "description" : "Is the asset stored on an external service (like AWS S3, Azure, Dropbox etc.)"
          }
        }
      },
      "then": {
        "properties": {
          "href": {
            "format": "uri",
            "pattern": "^https://",
            "description": "Any public url or a presignedURL for the asset input"
          }
        }
      },
      "else": {
        "properties": {
          "href": {
            "pattern": "^/?(files|temp|cloud-content|assets|pubs)/.+",
            "description": "A string representing the path to the input file stored on Adobe's cloud.</br> Not available for the integrations created with JWT authentication or Service Principle."
          },
          "storage": {
            "description" : "Is the asset stored on Adobe's cloud. </br> Not available for the integrations created with JWT authentication or Service Principle."
          }
        }
      }
    }
  }
}
