{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "post_predict.schema.json",
  "title": "post_predict",
  "description": "Initiates an asynchronous job to run multiple predict requests for an image",
  "type": "object",
  "required": ["inputs", "options"],
  "properties": {
    "inputs": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "$ref": "inputs.sensei.schema.json#/definitions/inputs"
      }
    },
    "options": {
      "type": "object",
      "minProperties": 1,
      "required": ["requestTypes", "version"],
      "properties": {
        "referenceJobId": {
          "type": "string",
          "description": "If present, it indicates that the input asset to this job would be from the reference job ID specified."
        },
        "xmp": {
          "anyOf": [
            {
              "$ref": "inputs.schema.json#/definitions/inputs",
              "description": "If present, will use the XMP to generate the model input for the given image in inputs array."
            },
            {
              "type": "string",
              "minLength": 1
            }
          ]
        },
        "requestTypes": {
          "type": "array",
          "minItems": 1,
          "maxItems": 10,
          "description": "The inference types to execute.",
          "items": {
            "type": "string",
            "enum": ["selectSubject", "selectObject", "selectSky", "selectSkin", "depthMap"]
          }
        },
        "version": {
          "type": "string",
          "description": "The version of Camera RAW to use while generating the mask."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
