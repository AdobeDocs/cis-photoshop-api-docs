{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "$id":"adjustments.schema.json",
  "title":"an adjustment object",
  "description":"adjustment layer attributes",
  "definitions": {
    "brightness_contrast":{
      "type":"object",
      "description":"Brightness and contrast settings",
      "minProperties": 1,
      "anyOf": [
        {"required": ["brightness"]},
        {"required": ["contrast"]}
      ],
      "properties":{
        "brightness":{
          "type":"integer",
          "description":"The adjustmentLayer's brightness",
          "minimum":-150,
          "maximum":150,
          "default": 0
        },
        "contrast":{
          "type":"integer",
          "description":"The adjustmentLayer's contrast",
          "minimum":-150,
          "maximum":150,
          "default": 0
        }
      }
    },
    "exposure":{
      "type":"object",
      "description":"exposure settings",
      "minProperties": 1,
      "anyOf": [
        {"required": ["exposure"]},
        {"required": ["offset"]},
        {"required": ["gammaCorrection"]}
      ],
      "properties":{
        "exposure":{
          "type":"number",
          "description":"The layer's exposure",
          "default":0.0,
          "minimum":-20,
          "maximum":20
        },
        "offset":{
          "type":"number",
          "description":"The layer's offset.",
          "default":0.0,
          "minimum":-0.5,
          "maximum":0.5
        },
        "gammaCorrection":{
          "type":"number",
          "description":"The layer's gammaCorrection.",
          "default":1.0,
          "minimum":0.01,
          "maximum":9.99
        }
      }
    },
    "hue_saturation":{
      "type":"object",
      "description":"hue and saturation settings",
      "minProperties": 1,
      "anyOf": [
        {"required": ["colorize"]},
        {"required": ["channels"]}
      ],
      "properties":{
        "colorize":{
          "type":"boolean",
          "description":"Colorize",
          "default": false
        },
        "channels":{
          "type":"array",
          "minItems":1,
          "description":"An array of hashes representing the 'master' channel (the remaining five channels of 'magentas', 'yellows', 'greens', etc are not yet supported)",
          "items":{
            "type":"object",
            "anyOf": [
              {"required": ["channel"]},
              {"required": ["hue"]},
              {"required": ["saturation"]},
              {"required": ["lightness"]}
            ],
            "properties":{
              "channel":{
                "type":"string",
                "enum":[
                  "master"
                ]
              },
              "hue":{
                "type":"integer",
                "minimum":-180,
                "maximum":180,
                "default": 0
              },
              "saturation":{
                "type":"integer",
                "minimum":-100,
                "maximum":100,
                "default": 0
              },
              "lightness":{
                "type":"integer",
                "minimum":-100,
                "maximum":100,
                "default": 0
              }
            }
          }
        }
      }
    },
    "color_balance":{
      "type":"object",
      "description":"color balance settings",
      "minProperties": 1,
      "anyOf": [
        {"required": ["preserveLuminosity"]},
        {"required": ["shadowLevels"]},
        {"required": ["midtoneLevels"]},
        {"required": ["hightoneLevels"]}
      ],
      "properties":{
        "preserveLuminosity":{
          "type":"boolean",
          "description":"preserveLuminosity"
        },
        "shadowLevels":{
          "type":"array",
          "description":"Array of 3 ints",
          "items":{
            "type":"integer",
            "minimum":-100,
            "maximum":100,
            "minItems":3,
            "maxItems":3
          }
        },
        "midtoneLevels":{
          "type":"array",
          "description":"Array of 3 ints",
          "items":{
            "type":"integer",
            "minimum":-100,
            "maximum":100,
            "minItems":3,
            "maxItems":3
          }
        },
        "hightoneLevels":{
          "type":"array",
          "description":"Array of 3 ints",
          "items":{
            "type":"integer",
            "minimum":-100,
            "maximum":100,
            "minItems":3,
            "maxItems":3
          }
        }
      }
    }
  }
}
